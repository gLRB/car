 .container {
  padding: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
}

.picker {
  flex: 1;
  font-size: 25rpx;
}

.button {
  display: block;
  margin: 0 auto;
  width: 200rpx;
  height: 80rpx;
  line-height: 50rpx;
  font-size: 40rpx;
  color: #fff;
  background-color: #4CAF50;
  border-radius: 40rpx;
  text-align: center;
}

.example {
  width: 200px;
  height: 100px;
  border-width: 1px;
  border-color: rgb(194, 181, 181);
  border-style: solid;
}