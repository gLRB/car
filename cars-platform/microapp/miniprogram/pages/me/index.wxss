/* WXSS */
.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.card-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 90%;
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  width: 48%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0px 2rpx 6rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.name {
  font-size: 28rpx;
  color: #333;
}

.gender {
  font-size: 24rpx;
  color: #999;
}