.container {
  margin: 20px;
  margin-top: -70px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.header {
  padding: 15px;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  background-color: #5abeff;
  color: #fff;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.item {
  text-align: left;
  display: flex;
  align-items: stretch;
  padding: 5px 10px;
  border-bottom: 1px solid #f0f0f0;
}

.item:last-child {
  border-bottom: none;
}

.label {
  text-align: match-parent;
  width: 70px;
  color: #999;
  font-size: 14px;
}

.value {
  flex: 1;
  font-size: 16px;
}

/* WXSS */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal form {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  max-width: 80vw;
  max-height: 80vh;
  overflow: auto;
  display: flex;
  flex-direction: column;
}

.modal form .form-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 5px;
  
}

.modal form .form-group input {
  flex: 1;
  margin-left: 10px;
  color: rgb(135, 172, 143);
}

.modal form button {
  margin-top: 20px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px;
  font-size: 16px;
}

.modal form button:disabled {
  background-color: #ddd;
  color: #666;
}

/* WXSS */
.buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 0px;
}

.buttons button {
  flex: 1;
  margin: 0 5px;
}

.picker {
  font-size: 35rpx;
  color: rgb(187, 77, 43);
}

.example {
  width: 200px;
  height: 70px;
  white-space: normal;
  word-wrap: break-word;
}